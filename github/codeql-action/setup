name: CodeQL

on:
  push:
    branches: [main]

jobs:
  analyze:
    name: Analyze
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up CodeQL
      uses: github/codeql-action/setup@v2.1 # 嘗試使用最新的版本

    - name: Run CodeQL analysis
      uses: github/codeql-action/analyze@v2
