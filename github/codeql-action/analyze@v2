name: CodeQL Analysis

on:
  push:
    branches: [main]

jobs:
  analyze:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up CodeQL
      uses: github/codeql-action/setup@v2

    - name: Run CodeQL analysis
      uses: github/codeql-action/analyze@v2
      with:
        # 指定SARIF輸出
        output: results.sarif
